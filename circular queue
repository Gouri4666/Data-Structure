#include<stdio.h>
#define N 50
int f=-1;
int r=-1;
int cq[N];
void insertion();
void deletion();
void display();
void count();
int main()
{
	int ch,cont;
	do
	{
	printf("\n\tMENU\n\t1.Insertion\n\t2.Deletion\n\t3.Display\n\t4.Count\n");
	printf("Enter choice: ");
	scanf("%d",&ch);
	switch(ch)
	{
		case 1:insertion();
			break;
		case 2:deletion();
			break;
		case 3:display();
			break;
		case 4:count();
			break;
	default:printf("Invalid choice!");
	}
	printf("\nContinue or exit (1/0): ");
	scanf("%d",&cont);
	}
	while(cont==1);
	return 0;
}
void insertion() 
{
	if((f==0 && r==N-1) || f==(r+1)%N)
	printf("Full");
	else
	{
	int item;
	printf("Enter item:");
	scanf("%d",&item);
	if(r==-1)
	f=r=0;
	else
	r=(r+1)%N;
	cq[r]=item;
	printf("%d inserted",cq[r]);
	}
}

void deletion()
 {
	int item;
	if(f==-1)
	printf("Empty");
	else
	{
	item=cq[f];
	if(f==r)
	f=r=-1;
	else
	f=(f+1)%N;
	printf("%d deleted",item);
	}
}


void display() 
{
	int i;
	if(f==-1)
	printf("empty");
	else
	{
	i=f;
	printf("Elements: ");
	while(1)
	{
		printf("%d ",cq[i]);
		if(i==r)
		break;
		i=(i+1)%N;
	}
	}
}

void count() 
{
	if(f==-1)
	printf("Count=0");
	else
	{
		int c;
		if(r>=f)
		c=r-f+1;
		else
		c=N-f+r+1;
		printf("Count=%d",c);
	}
}
